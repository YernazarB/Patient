<!-- Button trigger modal -->
<button type="button" class="btn btn-primary" data-toggle="modal" data-target="#AddDoctorModal">
    Новая запись
</button>

<!-- Modal -->
<div class="modal fade" id="AddDoctorModal" tabindex="-1" role="dialog" aria-labelledby="exampleModalLabel" aria-hidden="true">
    <div class="modal-dialog" role="document">
        <div class="modal-content">
            <div class="modal-header">
                <h5 class="modal-title" id="exampleModalLabel">Добавить нового специалиста</h5>
                <button type="button" class="close" data-dismiss="modal" aria-label="Close">
                    <span aria-hidden="true">&times;</span>
                </button>
            </div>
            <div class="modal-body">
                @using(Html.BeginForm("AddDoctor", "Doctor", "post"))
                {
                    <div class="form-group">
                        <label for="fullName">ФИО</label>
                        <input type="text" class="form-control" id="fullName" name="fullName">
                    </div>
                    <div class="form-group">
                        <label for="address">Специальность</label>
                        <input type="text" class="form-control" id="specialty" name="specialty">
                    </div>
                    <button type="submit" class="btn btn-primary">Сохранить</button>
                }
            </div>
            <div class="modal-footer">
            </div>
        </div>
    </div>
</div>



